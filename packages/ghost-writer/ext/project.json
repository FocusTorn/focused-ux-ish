{
    "name": "fux-ghost-writer",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ghost-writer/ext/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "main": "packages/ghost-writer/ext/src/extension.ts",
                "outputPath": "packages/ghost-writer/ext/dist",
                "outputFileName": "extension.js",
                "tsConfig": "packages/ghost-writer/ext/tsconfig.json",
                "format": ["esm"],
                "assets": ["packages/ghost-writer/ext/assets"],
                "external": ["vscode"]
            }
        },
        "check-types": {
            "executor": "@nx/js:tsc",
            "options": {
                "main": "packages/ghost-writer/ext/src/extension.ts",
                "tsConfig": "packages/ghost-writer/ext/tsconfig.json",
                "noEmit": true
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm eslint . --ext .ts",
                "cwd": "packages/ghost-writer/ext"
            }
        },
        "version-bump": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsx ./../../shared/tools/src/scripts/version_bump.ts",
                "cwd": "packages/ghost-writer/ext"
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "options": {
                "command": "vsce package --no-dependencies --out ../../../vsix_packages/",
                "cwd": "packages/ghost-writer/ext"
            },
            "dependsOn": ["build", "version-bump"]
        },
        "clean": {
            "executor": "nx:run-commands",
            "options": {
                "command": "rimraf ./dist .turbo",
                "cwd": "packages/ghost-writer/ext"
            }
        }
    }
}
