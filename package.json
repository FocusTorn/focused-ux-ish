{
    "name": "focused-ux",
    "scripts": {
        "== BUILD ============================================================================================ ": "",
        "build": "nx run-many --target=build --all",
        "build:clean": "pnpm install && nx run-many --target=clean --all && nx run-many --target=build --all",
        "== FINALIZE ========================================================================================= ": "",
        "package": "nx run-many --target=package --all",
        "package:clean": "nx run-many --target=clean --all && mkdirp vsix_packages && nx run-many --target=package --all",
        "dynamicons:doAssets": "pnpm --filter=@focused-ux/dynamicons-core run assets:build ",
        "== WATCH ============================================================================================ ": "",
        "watch-only": "nx run-many --target=watch-only --all",
        "== VALIDATE ========================================================================================= ": "",
        "check-types": "nx run-many --target=check-types --all",
        "lint": "nx run-many --target=lint --all",
        "lint:fix": "nx run-many --target=lint:fix --all",
        "validate": "node ./packages/tools/src/validate/index.js",
        "vlint": "node ./packages/tools/src/validate/index.js lint",
        "vdeps": "node ./packages/tools/src/validate/index.js deps",
        "vtsc": "node ./packages/tools/src/validate/index.js tsc",
        "tsum": "tsx ./packages/tools/src/scripts/node/aggregate-tsc-errors.ts",
        "lsum": "tsx ./packages/tools/src/scripts/node/aggregate-eslint-errors.ts",
        "tval": "nx run-many --target=check-types --all && nx run-many --target=lint --all",
        "tfix": "nx run-many --target=check-types --all && nx run-many --target=lint:fix --all",
        "eslint": "eslint \"**/src/**/*.{js,jsx,ts,tsx,cjs}\"",
        "== UTILITIES ======================================================================================== ": "",
        "version-bump": "tsx packages/shared/tools/src/scripts/version_bump.ts",
        "clean": "nx run-many --target=clean --all && rimraf node_modules/.cache/nx .nx",
        "nuke": "rimraf node_modules && rimraf packages/*/node_modules && pnpm store prune",
        "nuke:full": "pnpm run clean && rimraf packages/*/node_modules && rimraf node_modules && rimraf 'pnpm-lock.yaml' && pnpm install"
    },
    "devDependencies": {
        "@focused-ux/config-eslint": "workspace:*",
        "@focused-ux/tools": "workspace:*",
        "@nx/esbuild": "19.8.14",
        "@nx/js": "19.8.14",
        "@types/node": "latest",
        "@types/vscode": "latest",
        "@vitest/coverage-v8": "^3.2.3",
        "cross-env": "^7.0.3",
        "eslint": "^9.28.0",
        "knip": "^5.60.2",
        "mkdirp": "^3.0.1",
        "nx": "21.2.1",
        "plop": "^4.0.1",
        "prettier": "^3.5.3",
        "rimraf": "^5.0.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "version": "0.1.2",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "private": true,
    "packageManager": "pnpm@10.12.1",
    "type": "module",
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "vitest": "^3.2.3"
    }
}
